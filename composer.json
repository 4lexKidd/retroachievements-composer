{
    "name": "4lexkidd/retroachievements",
    "type": "library",
    "description": "RetroAchievements.org API wrapper",
    "keywords": ["retro", "achievements", "retroachievements"],
    "license": "MIT",
    "authors": [
        {
            "name": "Joe Strong",
            "email": "joe@joestrong.co.uk"
        }
    ],    
    "require": {
        "php": ">=7.1.0",
        "guzzlehttp/guzzle": ">=7.2"
    },
    "autoload": {
        "psr-4": {
            "4lexkidd\\RetroAchievements\\": "src/"
        }
    },
    "require-dev": {
        "phpspec/phpspec": "^4.0",
        "friendsofphp/php-cs-fixer": "^2.7"
    },
    "scripts": {
        "psr": "./vendor/bin/php-cs-fixer fix ./src --dry-run --diff",
        "test": "./vendor/bin/phpspec run"
    }
}
